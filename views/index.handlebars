<div class="container-fluid">
    
    <div class="row">
        <div class="col-lg-6">
            <h3>Burgers awaiting consumption</h3>
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
                
            </ul>
        </div>

        <div class="col-lg-6">
            <h3>Burgers downed</h3>
            <ul class="list-group">
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>
</div>



